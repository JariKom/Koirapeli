<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sivu2">

    <Button
        android:id="@+id/aloita_peli_alusta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Aloita peli alusta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.22000003" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Napin painaminen poistaa ostetut parannukset\nja nollaa keksit nollaan."
        app:layout_constraintEnd_toEndOf="@+id/aloita_peli_alusta"
        app:layout_constraintStart_toStartOf="@+id/aloita_peli_alusta"
        app:layout_constraintTop_toBottomOf="@+id/aloita_peli_alusta" />
</androidx.constraintlayout.widget.ConstraintLayout>